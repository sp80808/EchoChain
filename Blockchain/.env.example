# Node Configuration
NODE_NAME=EchoChain_Node
NODE_KEY=node_key_here
NODE_ROLE=validator
NODE_PORT=30333
NODE_WS_PORT=9944
NODE_RPC_PORT=9933

# Chain Specification
CHAIN=echochain
CHAIN_TYPE=local
CHAIN_ID=42

# P2P Networking
P2P_PEERS=peer1.example.com,peer2.example.com
P2P_DISCOVERY=true
P2P_PUBLIC_ADDR=/ip4/127.0.0.1/tcp/30333

# Database
DB_PATH=./data
DB_CACHE_SIZE=2048

# Telemetry
TELEMETRY_URL=wss://telemetry.polkadot.io/submit/
TELEMETRY_LEVEL=info

# Logging
LOG_FILTER=info,sync=warn,network=debug

# Consensus
CONSENSUS_ALGO=aura
CONSENSUS_SLOT_DURATION=6
CONSENSUS_EPOCH_LENGTH=600

# WASM Execution
WASM_EXECUTION=compiled
WASM_HEAP_PAGES=2048

# Prometheus Metrics
PROMETHEUS_PORT=9615
PROMETHEUS_PREFIX=echochain_