{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EchoChain Sample Metadata",
  "description": "Schema for music sample metadata in EchoChain",
  "type": "object",
  "required": [
    "id",
    "title",
    "creator",
    "createdAt",
    "contentHash",
    "licenseType"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the sample"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Title of the sample"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Detailed description of the sample"
    },
    "creator": {
      "type": "object",
      "required": ["walletAddress", "name"],
      "properties": {
        "walletAddress": {
          "type": "string",
          "pattern": "^[0-9a-zA-Z]{48}$",
          "description": "Creator's blockchain wallet address"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Creator's display name"
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when sample was created"
    },
    "contentHash": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{64}$",
      "description": "SHA-256 hash of the sample content"
    },
    "licenseType": {
      "type": "string",
      "enum": ["CC0", "CC-BY", "CC-BY-SA", "CC-BY-NC", "CC-BY-NC-SA", "PROPRIETARY"],
      "description": "License type for the sample"
    },
    "royalties": {
      "type": "object",
      "properties": {
        "percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Royalty percentage for creator"
        },
        "recipients": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["walletAddress", "percentage"],
            "properties": {
              "walletAddress": {
                "type": "string",
                "pattern": "^[0-9a-zA-Z]{48}$"
              },
              "percentage": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              }
            }
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "maxItems": 10,
      "description": "Tags for categorizing the sample"
    },
    "duration": {
      "type": "number",
      "minimum": 0,
      "description": "Duration in seconds"
    },
    "bpm": {
      "type": "number",
      "minimum": 20,
      "maximum": 300,
      "description": "Beats per minute"
    },
    "key": {
      "type": "string",
      "pattern": "^[A-G][#b]?(m)?$",
      "description": "Musical key"
    },
    "instruments": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["drums", "bass", "guitar", "piano", "synth", "vocal", "strings", "brass", "woodwind", "percussion"]
      }
    },
    "originalWork": {
      "type": "object",
      "properties": {
        "isOriginal": {
          "type": "boolean"
        },
        "derivedFrom": {
          "type": "string",
          "format": "uuid"
        },
        "modifications": {
          "type": "string",
          "maxLength": 500
        }
      }
    }
  },
  "additionalProperties": false
}